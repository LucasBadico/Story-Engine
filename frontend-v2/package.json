{
  "name": "story-engine-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Story Engine monorepo with shared UI package",
  "scripts": {
    "dev": "pnpm --filter './packages/*' --filter './apps/*' dev",
    "build": "pnpm --filter './packages/*' --filter './apps/*' build",
    "test": "pnpm --filter './packages/*' --filter './apps/*' test",
    "storybook": "pnpm --filter ui-package storybook",
    "lint": "pnpm --filter './packages/*' --filter './apps/*' lint",
    "type-check": "pnpm --filter './packages/*' --filter './apps/*' type-check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

